<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Closet</title>
    <!-- Add Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl7/1L_dstPt3HV5HzF6Gvk/e9T9hXmJ58bldgTk+"
      crossorigin="anonymous"
    />

    <style>
      .fixed-div {
      position: fixed; 
      top: 56px; 
      left: 12.5%; 
      width: 87.5%;
      height: 800px; 
      overflow-y: auto; 
      padding: 30px; 
      display: grid;
      grid-template-columns: repeat(5, 1fr); 
      gap: 30px; 
      } 
      .card {
      background-color: #f7f7f7;
      border: none;
      height: 600px; 
      width: 220px;
      box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 1px 3px 0 rgba(0, 0, 0,
      0.19); 
      transition: transform 0.3s ease-in-out; 
      display: flex;
      flex-direction: column; 
      justify-content: space-between; 
      } 
      .card:hover {     
      transform: scale(1.1); 
      } 
      .card-name h5 { 
      margin-left: 5%; 
      margin-bottom:0; 
      white-space: nowrap; 
      overflow: hidden; 
      text-overflow: ellipsis; 
      width:90%; 
      font-size: 1rem; 
      line-height: 1.2; 
      } 
      .card-price p { margin-left: 5%;
      text-align: left; 
      color: rgb(90, 90, 90); 
      font-size: 0.8rem; }      
      .card-img-top { 
      width: 100%; 
      height: 83%; 
      padding-bottom: 5%; 
      object-fit:cover; 

      #closet-modal {
        display: none; /* Hidden by default */
        position: static; /* Stay in place */
      }

      }
    </style>
  </head>

  <!-- Add Your Modal -->
  <div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="ModalLabel">Add Your Own Item</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form class = "needs-validation" action = "/closet/addYourOwn" method = "post">
            <div class = "mb-3">
              <label class = "form-label" for = "item_name">Item Name</label>
              <input class = "form-control" name = "item_name" id = "item_name" type = "text" placeholder="" required>

              <label class = "form-label" for = "brand">Brand</label>
              <input class = "form-control" name = "brand" id = "brand" type = "text" placeholder="">

              <label class = "form-label" for = "price">Price</label>
              <input class = "form-control" name = "price" id = "price" type = "number" placeholder="">

              <label class = "form-label" for = "description">Description</label>
              <input class = "form-control" name = "description" id = "description" type = "text" placeholder="">

              <label class = "form-label" for = "image_url">Image URL</label>
              <input class = "form-control" name = "image_url" id = "image_url" type = "url" placeholder="" required>

              <label class = "form-label" for = "website_url">Website Link</label>
              <input class = "form-control" name = "website_url" id = "website_url" type = "url" placeholder="">

              <label class = "form-label" for = "categories">Categories</label>
              <select name = "categories" id = "categories" class="form-select" aria-label="Default select example" required>
                <option selected disabled value="">Select one...</option>
                <option value="Tops">Tops</option>
                <option value="Bottoms">Bottoms</option>
                <option value="Dresses">Dresses</option>
                <option value="Shoes">Shoes</option>
                <option value="Accessories">Accesories</option>
              </select>
            </div>

            <button type="submit" class="btn btn-primary">Add Item</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <body>
    <div>
      {{> message}}
    </div>
    <div class="container-fluid p-0">
      <div class="row">
        <div class="col-md-3">
          <!-- Add your sidebar content here -->
        </div>
        <div class="col-md-9">
          <div class="fixed-div">

            <!-- Button to Add Item -->
            <button type="button" class="col-md-4 btn btn-primary" style="width: 220px;" data-bs-toggle="modal" data-bs-target="#Modal">
              Add Your Own Item
            </button>
            
            {{#each items}}
              <div class="col-md-4">
                <div class="card">
                  <img
                    src="{{this.image_url}}"
                    class="card-img-top"
                    alt="{{this.name}}"
                  />
                  <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">${{this.price}}</p>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">Brand: {{this.brand}}</p>
                    <button type="button" class="addToOutfit btn btn-primary">Add to Outfit</button>
                  </div>
                </div>
              </div>
            {{/each}}
            <div class="modal" tabindex="-1" id="closet-modal">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                  <div class="modal-header">
                    <h3 class="modal-title" style="padding-left: 15px">Add to Outfit</h3>
                    <button type="button" class="btn-close close-button" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    {{!-- REMEMBER TO MAKE THE API ROUTE LATER --}}
                    <form method="post" action="/addToOutfit" style="margin-left:auto; margin-right:auto;">
                      <h5 class="modal-title">Add to Existing Outfit</h5>
                        <div class="form-group" style="padding-bottom: 20px">
                          <label>Select Existing Outfit</label>
                            <select id="existing_outfit" class="form-control">
                              {{#each outfits}}
                                  <option value="{{this.outfit_name}}">{{this.outfit_name}}</option>
                              {{/each}}
                            </select>
                        </div>

                      <h5 class="modal-title">OR Create New Outfit</h5>
                      <div class="form-group">
                        <label>New Outfit Name</label>
                        <input name="newOutfitName" type="text" class="form-control">
                      </div>
                      <div class="form-group">
                        <label>New Outfit Description (optional)</label>
                        <input name="newOutfitDescription" type="text" class="form-control">
                      </div>
                      <button type="submit" class="btn btn-primary" >Add to Outfit</button>
                    </form>
                  </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary close-button" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
            {{!-- <div id="closetModal" class="modal">
              <div class="modal-content">
                  <span class="close">&times;</span>
                  <p>Some text in the Modal..</p>
              </div>
            </div> --}}
          </div>
        </div>
      </div>
    </div>

    <!-- Add Bootstrap JS CDN -->
    <script src="../../js/closetScript.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz4fnFO9gybB5IXNxFwWQfE7u8Lj+XJHAxKlXiG/8rsrtpb6PEdzD828Ii"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
      integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/"
      crossorigin="anonymous"
    ></script>
  </body>
</html>