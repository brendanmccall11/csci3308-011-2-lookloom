<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Closet</title>
    <!-- Add Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <style>
        .item-image {
            max-width: 100px;
        }
    </style>
  </head>

  <!-- Add Your Modal -->
  
<body>
    <!--p-4 d-flex flex-col jutify-content-between-->
    <div class = "position-absolute top-0 end-0">
        <button class = "btn btn-primary" href="/closet"> Back to Closet</button>
    </div>
<div class="p-4 d-flex flex-col jutify-content-between" style="margin:auto; width: 50%; height: 60%">
    <div class="container text-left w-100 pt-0 p-4">
        {{#each items}}
        <a href="{{this.link}}">
        <div class="row border border-3 rounded p-1">
            <div class="col col-4">
                <img 
                    src="{{this.image_url}}" 
                    alt="Beanie" 
                    class="item-image"> 
            </div>
            <div class="col" style="text-decoration: none; text-background-none; text-color:gray;">
                {{this.name}}
            </div>
        </div>
        </a>
        {{/each}}
    </div>
    <div class="w-100">
        <div class="d-flex flex-col justify-content-between w-full">
            <h1>{{this.outfit.outfit_name}}</h1>
        </div>
        <h4>Owned by: {{this.owner.first_name}} {{this.owner.last_name}}</h4>
        <h5>Total Price: $80000</h5>
        <p>{{this.outfit.description}}
        </p>
        <div class="d-flex flex-col gap-2">
            <form method="POST" action="/outfit">
                <input type="hidden" name="id" value="{{this.outfit.outfit_id}}"> 
                <button class = "btn btn-primary" type="submit">Delete Outfit</button>
            </form>
            
        </div>
    </div> 
</div>


    <!-- Add Bootstrap JS CDN -->
    <script src="../../js/closetScript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"  crossorigin="anonymous"></script>
  </body>
</html>
