<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Details</title>
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .content {
            max-width: 600px;
            width: 100%;
        }
        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .form-header {
            text-align: center;
            margin-bottom: 30px;
            padding-top: 20rem; /* Add padding to create space above the title */
        }
        .form-header h1 {
            color: #333;
        }
        .form-section {
            margin-bottom: 30px;
        }
        .form-section h2 {
            color: #333;
            margin-bottom: 15px;
        }
        .form-section p {
            color: #666;
            margin: 0;
        }
        .form-section form {
            display: flex;
            flex-direction: column;
        }
        .form-section label {
            margin-bottom: 5px;
            color: #333;
        }
        .form-section input[type="password"] {
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            margin-bottom: 10px;
        }
        .form-section button[type="submit"] {
            background-color: #007bff;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .form-section button[type="submit"]:hover {
            background-color: #0056b3;
        }
        .profile-section {
            text-align: center;
        }
        .profile-section img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 15px;
        }
        .profile-section button[type="button"] {
            background-color: #007bff;
            color: #fff;
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .profile-section button[type="button"]:hover {
            background-color: #0056b3;
        }
        .friends-section {
            text-align: left;
        }
        .friend-circle {
            display: inline-block;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #007bff;
            color: #fff;
            font-size: 24px;
            line-height: 50px;
            margin: 0 10px;
            text-align: center;

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="content">
            <header class="form-header">
                <h1>Account Details</h1>
            </header>
            <main>
                <section class="form-section">
                    <h2>User Information</h2>
                    <p>Username: <span id="username"></span></p>
                    <p>Email: <span id="email"></span></p>
                </section>
                <section class="profile-section">
                    <img id="profilePicture" src="" alt="Profile Picture">
                    <button id="updateProfilePictureBtn" type="button">Update Profile Picture</button>
                </section>
                <section class="friends-section">
                    <h2>Friends</h2>
                    <div id="friendsList"></div>
                    <div class="friend-circle">JD</div>
                    <div class="friend-circle">AB</div>
                    <div class="friend-circle">EF</div>
                </section>
                <section class="form-section">
                    <h2>Closet Preference</h2>
                    <form id="closetPreferenceForm" class="form-container" action="/updateClosetPreference" method="POST">
                        <label for="closetPreference">Select Closet Preference:</label>
                        <select id="closetPreference" name="closetPreference" required>
                            <option value="public">Public</option>
                            <option value="private">Private</option>
                        </select><br>
                        <button type="submit">Save Preference</button>
                    </form>
                </section>
                <section class="form-section">
                    <h2>Change Password</h2>
                    <form id="changePasswordForm" class="form-container" action="/changePassword" method="POST">
                        <label for="currentPassword">Current Password:</label>
                        <input type="password" id="currentPassword" name="currentPassword" required><br>
                        <label for="newPassword">New Password:</label>
                        <input type="password" id="newPassword" name="newPassword" required><br>
                        <label for="confirmPassword">Confirm New Password:</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required><br>
                        <button type="submit">Change Password</button>
                    </form>
                </section>
            </main>
        </div>
    </div>

<script>
    window.addEventListener('DOMContentLoaded', async () => {
        try {
            // Fetch user information
            const userInfoResponse = await fetch('/getUserInfo');
            const userData = await userInfoResponse.json();

            // Update user information in the DOM
            document.getElementById('username').innerText = userData.username;
            document.getElementById('email').innerText = userData.email;

            // Update profile picture
            document.getElementById('profilePicture').src = userData.profilePicture;

            // Fetch friends list
            const friendsResponse = await fetch('/getFriendsList');
            const friendsData = await friendsResponse.json();

            // Update friends list in the DOM
            const friendsList = document.getElementById('friendsList');
            if (friendsData.length === 0) {
                const noFriendsMessage = document.createElement('p');
                noFriendsMessage.textContent = 'No friends added.';
                friendsList.appendChild(noFriendsMessage);
            } else {
                friendsData.forEach(friend => {
                    const friendElement = document.createElement('div');
                    friendElement.classList.add('friend-circle');
                    friendElement.textContent = friend.name;
                    friendsList.appendChild(friendElement);
                });
            }
        } catch (error) {
            console.error('Error fetching user information:', error);
        }
    });
</script>
</body>
</html>
